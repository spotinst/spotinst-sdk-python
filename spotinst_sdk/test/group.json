    "scaling": {
      "up": [
        {
          "metricName": "CPUUtilization",
          "statistic": "average",
          "unit": "percent",
          "threshold": 90,
          "namespace": "AWS/EC2",
          "dimensions": [
            {
              "name": "InstanceId"
            }
          ],
          "period": 300,
          "evaluationPeriods": 1,
          "cooldown": 300,
          "action": {
            "type": "percentageAdjustment",
            "adjustment": 20
          },
          "operator": "gte"
        }
      ],
      "down": [
        {
          "metricName": "overhead",
          "statistic": "average",
          "unit": "milliseconds",
          "threshold": 0.8,
          "namespace": "Monitoring",
          "dimensions": [
            {
              "name": "Cluster",
              "value": "M2M"
            },
            {
              "name": "Environment",
              "value": "ia-staging"
            }
          ],
          "period": 300,
          "evaluationPeriods": 1,
          "cooldown": 300,
          "action": {
            "type": "adjustment",
            "adjustment": 1
          },
          "operator": "lt"
        }
      ],
      "target": [
        {
          "policyName": "target_policy_1",
          "metricName": "CPUUtilization",
          "statistic": "average",
          "source": "cloudWatch",
          "unit": "percent",
          "target": 50,
          "namespace": "AWS/EC2",
          "cooldown": 300
